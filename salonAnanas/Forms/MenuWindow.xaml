<Window x:Class="salonAnanas.Forms.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:salonAnanas.Forms"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid Columns="1" Margin="-10,0,9.6,0" >
            <Button x:Name="BtnClient" Click="BtnClient_Click"
                    Style="{StaticResource MenuButton}"
                    Content ="Client"></Button>
            <Button x:Name="BtnService" Click="BtnService_Click"
                    Style="{StaticResource MenuButton}"
                    Content ="Service"></Button>
            <Image Source="/salonAnanas;component/Resources/beauty_logo.png" Margin="10,10,10,6"/>
            <Button x:Name="BtnClientService" Click="BtnClientService_Click"
                    Style="{StaticResource MenuButton}"
                    Content ="Client Service"></Button>
            
            <Button x:Name="BtnProduct" Click="BtnProduct_Click"
                    Style="{StaticResource MenuButton}"
                    Content ="Product"></Button>

        </UniformGrid>
    </Grid>
</Window>
